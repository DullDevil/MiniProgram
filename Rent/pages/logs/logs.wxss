
.itemContainer {
  background-color: #fff;
}
.name {
  margin-left: 10px;
  font: 12px;
  line-height: 44px;
  color: #818181;
}
.unit {
  float: right;
  font: 12px;
  line-height: 44px;
  margin: 0 10px;
  color: #818181;
}
.price {
  float: right;
  width: 80px;
  height: 24px;
  border: 1px solid #dadada;
  margin-top: 10px;
  text-align: right;
  color: #00a6c4;
  background-color: #f1f1f1;
  padding: 0 5px;
}
.line {
  height: 1px;
  
  margin: 0 10px;
  background-color: #f0f0f0;
}

.save {
  margin: 15px;
  background-color: #00afca;
  color: #fff
}

.sectionTitle {
  background-color: #f0f0f0;
  height: 30px;
}
.sectionTitle .title {
  margin: 0 10px;
  line-height: 30px;
  font-size: 12px;
  color: #818181;
}
.sectionTitle .loadRecord {
  margin-top: 10px;
  margin-right: 10px;
  line-height: 14px;
  font-size: 12px;
  float: right;
  border-bottom: 1px solid #dadada;
  color: #818181;
}
